<script src="/index.js"></script>


<div class="title-header">
  <h4 class="title-name">Trains</h4>
  <div class="buttons">
    <button onclick="showmodal()" class="butt">Add a Train</button>
    <button onclick="showmodal2()" class="butt">Update a Train</button>
  </div>
</div>

<main id="card-container">
  <div id="row">

    {{#each data}}
    <div class="col">
      <section class="card">
        <div class="train-number">
          Train {{this.trainID}}
        </div>
        <div class="train-conductor">
          Conductor: {{this.conductorfirstname}} + {{this.conductorlastname}}
        </div>
        <div class="train-model">
          Model: {{this.model}}
        </div>
        <div class="train-price">
          Price: {{this.cost}}
        </div>
        <div class="train-capacity">
          Capacity: {{this.capacity}}
        </div>
      </section>
      </div>
      {{/each}}

  </div>
</main>

<form class="insert">
  <div class="middle">
    <h3>Insert Train</h3>
  </div>
  <div class="input-box">
    <label>Train #</label>
    <input type="text" id="train-number">
  </div>
  <div class="input-box">
    <label>Assigned Route</label>
    <input type="text" id="train-route">
  </div>
  <div class="input-box">
    <label>Model</label>
    <input type="text" id="train-model">
  </div>
  <div class="input-box">
    <label>Price</label>
    <input type="text" id="train-price">
  </div>
  <div class="input-box">
    <label>Capacity</label>
    <input type="text" id="train-capacity">
  </div>
  <div class="input-box">
    <label>Conductor</label>
    <input type="text" id="train-conductor">
  </div>
  <button onclick="inserttrain(); return false;" class="button" id="submit-train">Submit</button>
</form>

<form class="update">
  <div class="middle">
    <h3>Update Train</h3>
  </div>
  <div class="update-box">
    <label>Train #</label>
    <select name="train">
      <option value="1">Train 1</option>
      <option value="2">Train 2</option>
      <option value="3">Train 3</option>
      <option value="4">Train 4</option>
    </select>
  </div>
  <div class="update-box">
    <label>Assigned Route</label>
    <input type="text" id="train-route">
  </div>
  <div class="update-box">
    <label>Model</label>
    <input type="text" id="train-model">
  </div>
  <div class="update-box">
    <label>Price</label>
    <input type="text" id="train-price">
  </div>
  <div class="update-box">
    <label>Capacity</label>
    <input type="text" id="train-capacity">
  </div>
  <div class="update-box">
    <label>Conductor</label>
    <input type="text" id="train-conductor">
  </div>
  <button onclick="" class="button" id="submit-update-train">Submit</button>
</form>
